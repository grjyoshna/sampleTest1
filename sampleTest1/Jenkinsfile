pipeline{
    environment{
        registry = "grjyoshna/docker_test"
        registryCredential = "dockerhub"
    }
    agent any
    stages{
        stage('Cloning Git'){
            steps{
                git 'https://github.com/grjyoshna/sampleTest1.git'
            }
        }
        stage('Building Image'){
            steps{
                script{
                    docker.build registry + ":$BUILD_NUMBER"
                }
            }
        }
    }
}

pipeline{
    environment{
        registry = "grjyoshna/docker_test"
        registryCredential = "dockerhub"
    }
    agent {
        dockerfile {
            filename 'Dockerfile.jenkinsAgent'
            args '-v /var/run/docker.sock:/var/run/docker.sock'
        }
    stages{
            stage('Checkout code') {
                 steps {
                 checkout scm
                 }
             }
        
       
       
        stage('Building Image'){
            steps{
                script{
                    docker.build registry + ":$BUILD_NUMBER"
                }
            }
        }
    }
}
